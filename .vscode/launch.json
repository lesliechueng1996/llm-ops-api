  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "app.http.app",
      "env": {
        "FLASK_DEBUG": "1",
        "FLASK_ENV": "development"
      },
      "autoReload": {
        "enable": true,
        "pattern": ["**/*.py"]
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "Run pipreqs command",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run_pipreqs.py",
      "console": "integratedTerminal"
    }
  ]
}
